{
    "tasks": [
        {
            "label": "Terminal (solo macOS, para dar permisos a VSC)",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "Compilar el fichero activo (válido solo para programas contenidos en un solo fichero)",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Ejecutar fichero activo en el editor (válido solo para programas contenidos en un solo fichero)",
            "command": "./${fileBasenameNoExtension}",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\${fileBasenameNoExtension}.exe"]
            },
            "dependsOn": "Compilar fichero activo en el editor (válido solo para programas contenidos en un solo fichero)",
            "problemMatcher": []
        },
        {
            "label": "Compilar programa «invertir-secuencia»",
            "type": "shell",
            "command": "make",
            "args": [
                "invertir-secuencia"
            ],
            "problemMatcher": ["$gcc"],
            "group": "build",
        },
        {
            "label": "Ejecutar programa «invertir-secuencia»",
            "type": "shell",
            "command": "./invertir-secuencia",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\invertir-secuencia.exe"]
            },
            "dependsOn": "Compilar programa «invertir-secuencia»",
            "problemMatcher": ["$gcc"],
        },
        {
            "label": "Compilar programa «superiores-media»",
            "type": "shell",
            "command": "make",
            "args": [
                "superiores-media"
            ],
            "problemMatcher": ["$gcc"],
            "group": "build",
        },
        {
            "label": "Ejecutar programa «superiores-media»",
            "type": "shell",
            "command": "./superiores-media",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\superiores-media.exe"]
            },
            "dependsOn": "Compilar programa «superiores-media»",
            "problemMatcher": ["$gcc"],
        },
    ],
    "presentation": {
        "showReuseMessage": true,
        "panel": "shared",
        "reveal": "always",
        "focus": true,
    },
    "version": "2.0.0"
}